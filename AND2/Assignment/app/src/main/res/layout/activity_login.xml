<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login"
    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/anhdong"
        android:src="@drawable/anhdong" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/khung_edittext">

        <EditText
            android:id="@+id/edtTaiKhoanLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:inputType="text"
            android:hint="Username" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        app:hintEnabled="true"
        android:paddingRight="10dp"
        android:background="@drawable/khung_edittext"
        app:passwordToggleEnabled="true">
        >

        <EditText
            android:id="@+id/edtMatKhauLogin"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:text="fwerws"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:hint="Password" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/khung_btnthem"
        android:drawableStart="@drawable/anhdong"
        android:text="Đăng nhập" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:id="@+id/txtForgot"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSignUp"
        android:layout_marginTop="20dp"
        android:text="@string/sign_up" />


</LinearLayout>