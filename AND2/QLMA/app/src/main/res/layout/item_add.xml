<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/khung_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:text="THÊM MÓN ĂN"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtMaMonAnA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom"
        android:hint="Nhập mã món ăn"
        android:padding="10dp"
        android:textSize="22sp"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTenMonAnA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom"
        android:hint="Nhập tên món ăn"
        android:padding="10dp"
        android:inputType="none"
        android:cursorVisible="false"
        android:focusable="false"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNgayLamA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="date"
        android:background="@drawable/custom"
        android:hint="Nhập ngày"
        android:padding="10dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="THÊM" />

</LinearLayout>